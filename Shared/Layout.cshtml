@using ProcCore.Business.Logic;
@{
    ViewBag.Title = "台鑫國際實業有限公司:專業信任,研發客製,電子工業接著劑,UV爆光機,點膠設備,清潔劑,進出口貿易,開發設計";
}
<!DOCTYPE html>
<html>
<!-- saved from url=(0014)about:internet -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="接著劑, 電子工業接著劑, UV爆光機, 點膠機, 導熱膠, 導熱膏, 平面結構膠, 自動塗膠機, 紫外光固化接著劑, 軸配固定劑, 清潔劑, 高性能瞬間接著劑, 點膠膠閥, 除膠劑, 環保清洗劑 />
    <meta name="description" content="電子工業接著劑, UV爆光機, 點膠機, 清潔劑" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/swfobject.js"></script>
    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    @RenderSection("styles", false)
    <link rel="stylesheet" href="~/Content/css/page.css">
    <link rel="stylesheet" href="~/Content/css/mobile.css">
    <!-- 讓IE9支援css3的行動裝置語法 -->
    <!--[if lt IE 9]>
<script src="//css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
<![endif]-->
    <!-- 手機版選單js特效 -->
    <script>
        $(function () {
            var pull = $('#menu-icon');
            var menu = $('nav dl');
            var menuHeight = menu.height();

            $(pull).on('click', function (e) {
                e.preventDefault();
                menu.slideToggle();
            });

            $(window).resize(function () {
                var w = $(window).width();
                if (w > 320 && menu.is(':hidden')) {
                    menu.removeAttr('style');
                }
            });
        });
    </script>
</head>

<body class="@ViewBag.BodyClass">

    <div id="container">

        <div id="header">

            <h1 onclick="location.href='@Url.Content("~/index")';" title="回首頁">台鑫國際實業有限公司:專業信任,研發客製,電子工業接著劑</h1>

            <ul id="menu">
                <li class="nav1"><a href="~/index">HOME</a></li>
                <li class="nav2"><a href="~/AboutUs/AboutUs">關於我們<em>About Us</em></a></li>
                <li class="nav3"><a href="~/News/News">最新消息<em>News</em></a></li>
                <li class="nav4"><a href="~/Products/Products">產品介紹<em>Products</em></a></li>
                <li class="nav5"><a href="~/ContactUs/ContactUs">聯絡我們<em>Contact Us</em></a></li>
            </ul>

        </div>
        <!-- header //-->
        
        <div id="banner"></div>
        <script src="~/Scripts/swfobject.js" type="text/javascript"></script>
				<script type="text/javascript">
				  // <![CDATA[
					var so = new SWFObject("@Url.Content("~/Content/images/banner.swf")", "STYLE ARENA", "1024px", "254px", "8", "transparent");
					so.addParam("quality", "high");
					so.addParam("salign", "");
					so.addParam("scale", "noscale");
					so.addParam("wmode", "transparent");
					so.addParam("allowScriptAccess", "always");
					so.addParam("base", ".");
					so.write("banner");
					// ]]>
				</script>

        <div id="main">

            <div id="sidebar">
                <h4>PRODUCTS</h4>
                <nav>
                <a id="menu-icon" href="#menu" title="點選開啟選單">Catalogs</a>
                <dl>
                    @foreach (var PL1 in (m_ProductMainKind[])ViewBag.ProductMainKinds)
                    {
                        if (ViewData["ProductL1"].ToString().Equals(PL1.id.ToString()))
                        {
                        <dt class="current"><a href="~/Products/Products/@PL1.id">@PL1.name</a></dt>
                        }
                        else
                        {
                        <dt><a href="~/Products/Products/@PL1.id">@PL1.name</a></dt>
                        }
                        foreach (var PL2 in PL1.children)
                        {
                            if (ViewData["ProductL2"].ToString().Equals(PL2.id.ToString()))
                            {
                        <dd class="current"><a href="~/Products/ProductsSub/@PL2.id">@PL2.name</a></dd>
                            }
                            else
                            {
                        <dd><a href="~/Products/ProductsSub/@PL2.id">@PL2.name</a></dd>
                            }
                        }
                    }
                </dl>
                </nav>
            </div><!-- sidebar //-->

            @RenderBody()

        </div>
        <!-- main //-->

    </div>
    <!-- container //-->

    @Html.Partial("footer")

</body>
</html>
